{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    // "module": "esnext",
    // "moduleResolution": "bundler",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": ["./.wrangler/types/runtime.d.ts"],
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  // TODO: I remmoved ".next/types/**/*.ts"
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next.config.js", "postcss.config.cjs", "postcss.config.cjs", "**/*.module.css", "lib/**/*.d.ts"],
  "exclude": ["node_modules"]
}
